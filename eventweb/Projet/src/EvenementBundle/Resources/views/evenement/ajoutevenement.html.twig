{% extends 'base.html.twig' %}
{% block body %}
    <section class="wrapper site-min-height">
        <h3><i class="fa fa-angle-right"></i> Ajouter evenement</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="row mt">
                    <div class="form-panel">
                        <div class="form">
                            {{form_start (form)}}
                            <div class="form-group ">

                                <label for="nom" class="control-label col-lg-2">Nom:</label>
                                {{form_widget (form.nom, {'attr': {'class': 'form-control'}})}}<br>

                            </div>
                            <div class="form-group ">
                                <label for="lieu" class="control-label col-lg-2">Lieu:</label>

                                {{form_widget (form.lieu, {'attr': {'class': 'form-control'}})}} <br>
                            </div>
                            <div class="form-group ">
                                <label for="description" class="control-label col-lg-2">Description:</label>

                                {{form_widget (form.description, {'attr': {'class': 'form-control'}})}} <br>
                            </div>
                            <div class="form-group ">
                                <label for="dateevent" class="control-label col-lg-2">Dateevent:</label>
<br>
                                {{form_widget (form.dateevent, {'attr': {'class': 'form-control'}})}}<br>
                            </div>
                            <div class="form-group ">
                                <label for="type" class="control-label col-lg-2">Type:</label>

                                {{form_widget (form.type, {'attr': {'class': 'form-control'}})}}<br>
                            </div>
                            <div class="form-group">

                                <input type="submit" value="Envoyer" class="btn btn-success"/>                            </div>

                            {{form_end (form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
