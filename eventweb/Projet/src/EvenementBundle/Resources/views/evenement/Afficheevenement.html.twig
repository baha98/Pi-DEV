{% extends 'base.html.twig' %}
{% block body %}
    <h2><i class="fa fa-angle-right"></i> evenement</h2>
    <br>
    <br>
    <strong>Recherche</strong>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <script language="JavaScript" src="https://code.jquery.com/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>
    <input id="myInput" type="text">



        <div class="row mt">
            <div class="col-lg-12">
                <div class="content-panel" style="width: 1200px; height: 450px;">
                    <h4><i class="fa fa-angle-right"></i>Liste des evenement</h4>
                    <section id="unseen">
                        <table id="myTable" class="table table-striped table-advance table-hover">
                            <thead>
                            <tr>
                                <th class="numeric">nom</th>
                                <th class="numeric">lieu</th>
                                <th class="numeric">Description</th>
                                <th class="numeric">dateevent</th>
                                <th class="numeric">type</th>
                                <th class="numeric">supprimer</th>
                                <th class="numeric">modifier</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for a in evenement %}
                  <tr>

                                <td>{{ a.nom}}</td>
                                <td>{{ a.lieu}}</td>
                                <td>{{ a.description}}</td>
                                <td>{{ a.dateevent|date("m/d/Y")}}</td>
                                <td>{{ a.type}}</td>
                                <td><a class="btn btn-danger btn-xs" href="{{ path('evenement_Supprime',{'id':a.id}) }}">Supprimer <i class="fa fa-trash-o"></i></a></td>
                                <td><a class="btn btn-primary btn-xs" href="{{ path('evenement_Modifier',{'id':a.id}) }}">Modifier <i class="fa fa-pencil"></i></a> </td>
                  </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </section>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /col-lg-4 -->
        </div>

        <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}