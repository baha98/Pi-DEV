{% extends 'base.html.twig' %}
{% block body %}
    <section class="wrapper site-min-height">
        <h3><i class="fa fa-angle-right"></i> Modifier participation</h3>
        <div class="row mt">
            <div class="col-lg-12">
                <div class="row mt">
                    <div class="form-panel">
                        <div class="form">
                            {{form_start (form)}}
                            <div class="form-group ">

                                <label for="record" class="control-label col-lg-2">record:</label>
                                {{form_widget (form.record, {'attr': {'class': 'form-control'}})}}<br>

                            </div>

                            <div class="form-group ">
                                <label for="ranking" class="control-label col-lg-2">ranking:</label>

                                {{form_widget (form.ranking, {'attr': {'class': 'form-control'}})}} <br>
                            </div>
                            <div class="form-group ">
                                <label for="idEvent" class="control-label col-lg-2">idEvent:</label>

                                {{form_widget (form.idEvent, {'attr': {'class': 'form-control'}})}} <br>
                            </div>
                            <div class="form-group ">
                                <label for="idMembre" class="control-label col-lg-2">idMembre:</label>

                                {{form_widget (form.idMembre, {'attr': {'class': 'form-control'}})}} <br>
                            </div>


                            <div class="form-group">

                                <input type="submit" value="Envoyer" class="btn btn-success"/>

                            </div>

                            {{form_end (form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- /wrapper -->
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->
