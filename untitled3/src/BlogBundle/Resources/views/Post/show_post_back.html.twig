{% extends 'base2.html.twig' %}
{% block content %}
    <!--sidebar end-->
    <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
    <!--main content start-->

    <section id="main-content">
        <section class="wrapper">
            <div class="col-md-12">
                <div class="content-panel">
                    <h4><i class="fa fa-angle-right"></i>Posts</h4><hr><table class="table table-striped table-advance table-hover">
                        <a style="float: right;margin-right: 8px;" href="{{ path('blog_create') }}"><button class="btn btn-primary btn-xs"> ajouter </button></a>
                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th>Date de post</th>
                            <th>nombre de vue</th>
                            <th>nombre de j'aime</th>
                            <th>Categorie</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for blog in Blogs %}
                        <tr class="gradeX">
                            <td><img src="{{ asset( 'image/'~blog.getImage()) }}" alt="blog-thumb" class="img-fluid w-100" style="width: 200px;height: 200px"></td>
                            <td>{{ blog.getTitre()}}</td>
                            <td>{{ blog.getDescription()[0:10]}}</td>
                            <td>{{ blog.getDateActualite() |date("m/d/Y") }}</td>
                            <td>{{ blog.getNbreVus()}}</td>
                            <td>{{ blog.getNbreJaime()}}</td>
                            <td>{{ blog.getCategorie() }}</td>
                            <td>
                                <a href ="{{ path('blog_update',{'id': blog.getId()}) }}"><button class="btn btn-primary btn-xs" ><i class="fa fa-pencil"></i></button></a>
                            </td>
                            <td>
                                <a  onclick="succes()" href="{{ path('blog_delete',{'id': blog.getId()}) }}" ><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                            </td>
                        </tr>
                        </tbody>
                        {% endfor %}
                    </table>
                    <div class="pagination" style="margin-left: 450px;">
                        {{ knp_pagination_render(Blogs) }}
                    </div>
                </div>
                <!-- /content-panel -->
            </div>

            <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
{% endblock %}

