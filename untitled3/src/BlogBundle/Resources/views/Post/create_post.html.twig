{% extends "::base2.html.twig" %}

{% block content %}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Ajouter actualit√©</h3>

        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <div class="form">
                        {{ form_start(form, {'attr': {'class':'cmxform form-horizontal style-form'}}) }}
                            <div class="form-group ">
                                <label for="firstname" class="control-label col-lg-2">Titre</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="lastname" class="control-label col-lg-2">Description</label>
                                <div class="col-lg-10">
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Date de publication</label>
                                <div class="col-md-4">
                                        {{ form_widget(form.dateActualite, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-lg-10 col-sm-9">
                                    {{ form_widget(form.categorie) }}
                                </div>
                            </div>
                            <div class="form-group last">
                                <div style="width: 500px;margin-left: 20px;">
                                    {{ form_widget(form.image, {'attr':{'class': 'form-control'}}) }}
                                </div>

                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    {{ form_widget(form.save, { 'label': 'Save' }) }}
                                    <button class="btn btn-theme04" type="button">Cancel</button>
                                </div>
                            </div>

                        {{ form_end(form) }}
                    </div>
                </div>
                <!-- /form-panel -->
            </div>
            <!-- /col-lg-12 -->
        </div>

    </section>

{% endblock %}
