{% extends 'base2.html.twig' %}
{% block content %}
    <!--sidebar end-->
    <!-- **********************************************************************************************************************************************************
        MAIN CONTENT
        *********************************************************************************************************************************************************** -->
    <!--main content start-->

    <section id="main-content">
        <section class="wrapper">
            <div class="col-md-12">
                <div class="content-panel">
                    <h4><i class="fa fa-angle-right"></i>Locations</h4><hr><table class="table table-striped table-advance table-hover">


                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Pr√©nom</th>
                            <th>Email</th>
                            <th>Adresse</th>
                            <th>Image</th>
                            <th>Velo</th>
                            <th>Marque</th>
                            <th>Description</th>
                            <th>Date de Debut</th>
                            <th>Date de fin</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for Location in Locations %}
                        <tr class="gradeX">
                            <td>{{ Location.getIdUser().getNomMembre()}}</td>
                            <td>{{ Location.getIdUser().getPrenomMembre()}}</td>
                            <td>{{ Location.getIdUser().getEmail()}}</td>
                            <td>{{ Location.getIdUser().getAdresseMembre()}}</td>
                            <td> <img src="{{  asset ('image/'~Location.getIdVelo().Image)}}" alt="" style="width: 200px;height: 200px"/></td>
                            <td>{{ Location.getIdVelo().getLibelle()}}</td>
                            <td>{{ Location.getIdVelo().getMarque()}}</td>
                            <td>{{ Location.getIdVelo().getDescription()}}</td>
                            <td>{{ Location.getDateDebut()|date("m/d/Y")}}</td>
                            <td>{{ Location.getDateFin()|date("m/d/Y")}}</td>
                            <td>
                                <a href ="{{ path('update_location',{'id': Location.getId()}) }}"><button class="btn btn-primary btn-xs" ><i class="fa fa-pencil"></i></button></a>
                            </td>
                            <td>
                                <a  onclick="succes()" href="{{ path('delete_location',{'id':Location.getId()}) }}" ><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                            </td>
                        </tr>
                        </tbody>
                        {% endfor %}
                    </table>
                    <div class="pagination" style="margin-left: 450px;">
                        {{ knp_pagination_render(Locations) }}
                    </div>
                </div>
                <!-- /content-panel -->
            </div>

            <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
{% endblock %}

